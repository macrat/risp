" vim: set ft=lisp : "

(def test (import "./test.risp"))
(def assert (test assert))

((test case)
 "map"
 (func ()
       (def f (func (x) (* x 2)))
       (def xs (map (seq 5) f))
       (assert = (list 2 4 6 8 10) xs)

       (assert = (list 0 1 0) (map (seq -1 1) not))))

((test case)
 "fold"
 (func ()
       (assert = 15 (fold (seq 5) +))
       (assert = 120 (fold (seq 5) *))
       (assert = "hello" (fold (list "he" "l" "lo") +))))
