" vim: set ft=lisp : "

(def test (import "./test.risp"))
(def assert (test assert))

((test case)
 "map"
 (func ()
  (assert = (list 2 4 6) (map (list 1 2 3) (func (x) (* x 2))))

  (assert =
          (list "a" "b")
          (map (list (list "a" 1) (list "b" 2))
               car))))

((test case)
 "fold"
 (func ()
  (assert = 15 (fold (list 1 2 3 4 5) +))

  (assert =
          "ab"
          (fold (list "" (list "a" 1) (list "b" 2))
                (func (acc cur) (+ acc (car cur)))))))
